<?xml version="1.0" encoding="UTF-8" ?>
<units>
    <unitGroup for="time">
        <unit>
            <name>heure, heures</name>
            <symbol>h</symbol>
            <flags strict="true"/>
            <convertToSI>it*3600</convertToSI>
        </unit>

        <unit>
            <name>minute, minutes</name>
            <symbol>min, mins</symbol>
            <flags strict="true"/>
            <convertToSI>it*60</convertToSI>
        </unit>

        <unit>
            <name>seconde, secondes</name>
            <symbol>s, sec, secs</symbol>
            <flags noSuperUnit="true"/>
            <SI/>
        </unit>
    </unitGroup>

    <unitGroup for="speed">
        <alias>
            <component name="distance" exposant="1" SIUnit="m"/>
            <component name="time" exposant="-1" SIUnit="s"/>
        </alias>
    </unitGroup>

    <unit for="distance">
        <name>metre, metres</name>
        <symbol>m</symbol>
        <SI/>
    </unit>
</units>
